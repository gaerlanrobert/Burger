<h1>Burger APP!</h1>

<h2>Eat a Burger!</h2>

<ul>
    {{#each burger}}
    {{#unless devoured}}
    <li>
        {{name}}
        <button class="eat-burger" data-id="{{this.id}}">EAT!</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Time to eat a burger!</h2>

<ul>
    {{#each burger}}
    {{#if devoured}}
    <li>
        {{name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Devoured a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger:</label>
        <input type="text" id="burger" name="name">
    </div>


    <button type="submit">Add Burger</button>
</form>